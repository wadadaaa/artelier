{% comment %}
  Minimalist Header for Art Theme - Leah Gardner Style
  File: sections/header.liquid
{% endcomment %}

<header class="site-header" role="banner">
  <nav class="header-nav" aria-label="Main navigation">
    <div class="header-container">
      <!-- Logo/Site Title -->
      <div class="header-logo">
        {% if section.settings.logo %}
          <a href="{{ routes.root_url }}" class="header-logo-link">
            <img
              src="{{ section.settings.logo | image_url: width: 200 }}"
              srcset="{{ section.settings.logo | image_url: width: 100 }} 100w,
                      {{ section.settings.logo | image_url: width: 200 }} 200w"
              sizes="200px"
              alt="{{ shop.name | escape }}"
              class="header-logo-image"
              width="100"
              height="auto"
            >
          </a>
        {% else %}
          <a href="{{ routes.root_url }}" class="header-title">
            {{ section.settings.site_title | default: shop.name | downcase }}
          </a>
        {% endif %}
      </div>

      <!-- Header Actions (Cart icon only for minimal look) -->
      <div class="header-actions">
        <a href="{{ routes.cart_url }}" class="header-action-link header-cart" id="cart-icon-bubble">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <circle cx="8" cy="21" r="1"/>
            <circle cx="19" cy="21" r="1"/>
            <path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57L23 6H6"/>
          </svg>
          <span class="cart-count-bubble {% if cart == empty %}hidden{% endif %}">
            <span aria-hidden="true">{{ cart.item_count }}</span>
            <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
          </span>
        </a>
      </div>
    </div>
  </nav>
</header>

<style>
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background-color: transparent;
    padding: 0.75rem 2rem;
    transition: all 0.3s ease;
  }
  
  .site-header.scrolled {
    padding: 0.5rem 2rem;
    box-shadow: none; /* As per leahgardner.art, no shadow on scroll */
  }
  
  .header-container {
    max-width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  /* Logo/Title */
  .header-logo {
    flex: 0 0 auto;
  }
  
  .header-title {
    font-size: 1.25rem; /* Adjust as needed, leahgardner.art has a larger, stylized title */
    font-weight: 400;
    color: var(--color-foreground, #2c2c2c); /* leahgardner.art uses a pinkish color */
    text-decoration: none;
    letter-spacing: 0.02em;
    transition: opacity 0.3s ease;
  }
  
  .header-title:hover {
    opacity: 0.7;
  }
  
  .header-logo-image {
    height: auto;
    max-height: 30px; /* Adjust as needed */
    width: auto;
  }
  
  /* Header Actions */
  .header-actions {
    display: flex;
    align-items: center;
    gap: 1.5rem; /* Adjust spacing for search and cart if search is added */
  }
  
  .header-action-link {
    color: var(--color-foreground, #2c2c2c); /* leahgardner.art icons are orange */
    text-decoration: none;
    padding: 0.5rem;
    transition: all 0.3s ease;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .header-action-link:hover {
    opacity: 0.7;
  }
  
  /* Cart Count */
  .cart-count-bubble {
    position: absolute;
    top: -8px;
    right: -8px;
    background-color: var(--color-accent, #ff6b35); /* Orange color */
    color: white;
    border-radius: 50%;
    min-width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: 500;
  }
  
  .cart-count-bubble.hidden {
    display: none;
  }
  
  /* Mobile Styles */
  @media (max-width: 768px) {
    .site-header {
      padding: 1.5rem 1.5rem; /* Increased padding for mobile */
    }
    
    .site-header.scrolled {
      padding: 1rem 1.5rem;
    }
    
    .header-title {
      font-size: 1.25rem; /* Ensure readability */
    }
  }
</style>

<script>
  // Header scroll effect
  document.addEventListener('DOMContentLoaded', function() {
    const header = document.querySelector('.site-header');
    
    window.addEventListener('scroll', function() {
      if (window.scrollY > 50) { // Adjust scroll threshold if needed
        header.classList.add('scrolled');
      } else {
        header.classList.remove('scrolled');
      }
    });
  });
</script>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "text",
      "id": "site_title",
      "label": "Site title",
      "info": "Used if no logo is uploaded. Example: leah gardner",
      "default": "maria kireev"
    }
  ]
}
{% endschema %}