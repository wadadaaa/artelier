{% comment %}
  This section is used in the product template to render product page with
  media, content, and add-to-cart form.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/product
{% endcomment %}

<section class="product-section-leah">
  <div class="product-container-leah">
    <!-- Left: Product Image -->
    <div class="product-image-col-leah">
      {% if product.images.size > 0 %}
        {% for image in product.images %}
          <img src="{{ image | image_url: width: 900 }}" alt="{{ product.title | escape }}" class="product-main-image-leah" width="{{ image.width }}" height="{{ image.height }}">
        {% endfor %}
      {% else %}
        <div class="product-image-placeholder-leah"></div>
      {% endif %}
    </div>
    <!-- Right: Product Info -->
    <div class="product-info-col-leah">
      <h1 class="product-title-leah">{{ product.title }}</h1>
      <div class="product-price-leah">{{ product.price | money }}</div>
      <form class="product-form-leah" method="post" action="/cart/add">
        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
        {% if product.variants.size > 1 %}
          <div class="product-options-leah">
            <div class="product-options-label-leah">Size:</div>
            <div class="product-options-list-leah">
              {% for variant in product.variants %}
                <label class="product-option-leah">
                  <input type="radio" name="id" value="{{ variant.id }}" {% if variant == product.selected_or_first_available_variant %}checked{% endif %}>
                  <span>{{ variant.title }}</span>
                </label>
              {% endfor %}
            </div>
          </div>
        {% endif %}
        <div class="product-qty-leah">
          <span>Quantity:</span>
          <button type="button" class="qty-btn-leah" onclick="this.nextElementSibling.stepDown()">-</button>
          <input type="number" name="quantity" min="1" value="1" class="qty-input-leah">
          <button type="button" class="qty-btn-leah" onclick="this.previousElementSibling.stepUp()">+</button>
        </div>
        <button type="submit" class="btn-leah add-to-cart-leah">Add to cart &rarr;</button>
        <button type="button" class="btn-leah shop-pay-leah">Buy with <span class="shop-pay-text">shop</span><span class="shop-pay-pay">Pay</span></button>
      </form>
      <div class="product-payment-options-leah">
        <a href="#" class="more-payment-leah">More payment options</a>
      </div>
      <div class="product-description-leah">
        {{ product.description }}
      </div>
      <div class="product-accordions-leah">
        <details class="accordion-leah"><summary>VIBRANT & AGE RESISTANT</summary><div>Archival pigment print on museum-grade paper.</div></details>
        <details class="accordion-leah"><summary>STAMP OF APPROVAL</summary><div>Hand-signed by the artist.</div></details>
        <details class="accordion-leah"><summary>SHIPPING</summary><div>Worldwide shipping available. Ships rolled in a tube.</div></details>
        <details class="accordion-leah"><summary>FRAMING</summary><div>Framing available upon request.</div></details>
      </div>
    </div>
  </div>
</section>

<style>
.product-section-leah {
  border: 4px solid #ff4c00;
  border-radius: 0;
  margin: 0 auto 2rem auto;
  max-width: 1200px;
  background: #fff;
  box-sizing: border-box;
}
.product-container-leah {
  display: flex;
  flex-direction: row;
  align-items: stretch;
  min-height: 600px;
}
.product-image-col-leah {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 1.5rem;
  flex: 1 1 50%;
  border-right: 4px solid #ff4c00;
  background: #fff;
  min-width: 0;
}
.product-main-image-leah {
  width: 100%;
  height: auto;
  object-fit: cover;
  display: block;
  border-radius: 0;
  box-shadow: none;
}
.product-image-placeholder-leah {
  width: 100%;
  height: 400px;
  background: #eee;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #aaa;
}
.product-info-col-leah {
  flex: 1 1 50%;
  padding: 2.5rem 2.5rem 2.5rem 2rem;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background: #fff;
  min-width: 0;
}
.product-title-leah {
  font-size: 2.2rem;
  font-weight: 700;
  color: #ff4c00;
  margin-bottom: 0.5rem;
  line-height: 1.1;
}
.product-price-leah {
  color: #a33;
  font-size: 1.2rem;
  font-weight: 500;
  margin-bottom: 1.5rem;
}
.product-options-leah {
  margin-bottom: 1.2rem;
}
.product-options-label-leah {
  font-size: 1.1rem;
  color: #a33;
  margin-bottom: 0.3rem;
}
.product-options-list-leah {
  display: flex;
  gap: 1.5rem;
  flex-wrap: wrap;
}
.product-option-leah {
  border: 2px solid #ff4c00;
  border-radius: 4px;
  padding: 0.4em 1em;
  font-size: 1rem;
  color: #a33;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 0.5em;
  background: #fff;
  transition: border 0.2s;
}
.product-option-leah input[type="radio"] {
  accent-color: #ff4c00;
  margin-right: 0.3em;
}
.product-option-leah input[type="radio"]:checked + span,
.product-option-leah input[type="radio"]:checked {
  font-weight: 700;
  color: #ff4c00;
}
.product-option-leah:hover {
  border-color: #a33;
}
.product-qty-leah {
  display: flex;
  align-items: center;
  gap: 0.5em;
  margin-bottom: 1.5rem;
  font-size: 1.1rem;
}
.qty-btn-leah {
  border: none;
  background: none;
  color: #ff4c00;
  font-size: 1.5rem;
  width: 2rem;
  height: 2rem;
  line-height: 2rem;
  text-align: center;
  cursor: pointer;
  transition: color 0.2s;
}
.qty-btn-leah:hover {
  color: #a33;
}
.qty-input-leah {
  width: 2.5em;
  text-align: center;
  font-size: 1.1rem;
  border: none;
  border-bottom: 2px solid #ff4c00;
  background: transparent;
  color: #a33;
}
.btn-leah {
  display: block;
  width: 100%;
  margin-bottom: 1rem;
  padding: 0.9em 0;
  font-size: 1.1rem;
  font-weight: 600;
  border-radius: 0;
  border: 2px solid #ff4c00;
  background: #fff;
  color: #ff4c00;
  cursor: pointer;
  transition: background 0.2s, color 0.2s;
  text-transform: none;
}
.btn-leah.add-to-cart-leah {
  background: #fff;
  color: #ff4c00;
}
.btn-leah.add-to-cart-leah:hover {
  background: #ff4c00;
  color: #fff;
}
.btn-leah.shop-pay-leah {
  background: #4f2ee8;
  color: #fff;
  border: none;
  margin-bottom: 0.7rem;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.2em;
}
.shop-pay-text {
  font-weight: 700;
  letter-spacing: 0.5px;
}
.shop-pay-pay {
  font-weight: 700;
  background: #fff;
  color: #4f2ee8;
  border-radius: 3px;
  padding: 0 0.2em;
  margin-left: 0.1em;
}
.product-payment-options-leah {
  margin-bottom: 1.2rem;
}
.more-payment-leah {
  color: #a33;
  text-decoration: underline;
  font-size: 1rem;
  display: inline-block;
  margin-bottom: 1.2rem;
}
.product-description-leah {
  margin-bottom: 1.5rem;
  color: #a33;
  font-size: 1.1rem;
}
.product-accordions-leah {
  margin-top: 1.5rem;
}
.accordion-leah {
  border: none;
  border-bottom: 2px solid #ff4c00;
  margin-bottom: 0.5rem;
  font-size: 1.1rem;
}
.accordion-leah summary {
  font-weight: 600;
  color: #ff4c00;
  cursor: pointer;
  padding: 0.5em 0;
  outline: none;
  transition: color 0.2s;
}
.accordion-leah[open] summary {
  color: #a33;
}
.accordion-leah div {
  padding: 0.5em 0 0.5em 1em;
  color: #a33;
}
@media (max-width: 900px) {
  .product-container-leah {
    flex-direction: column;
  }
  .product-image-col-leah, .product-info-col-leah {
    flex: 1 1 100%;
    border-right: none;
    padding: 1.5rem 1rem;
  }
  .product-image-col-leah {
    gap: 1rem;
  }
  .product-main-image-leah {
    max-width: 100%;
    max-height: 300px;
    object-fit: contain;
  }
}
</style>

{% schema %}
{
  "name": "t:general.product",
  "settings": [],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}
