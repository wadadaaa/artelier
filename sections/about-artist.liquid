    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "I'm Leah, an oil painter from Chicago. I paint something new every day, and you can check out these pieces right here. Thanks for stopping by, and I hope you find a painting you love!"
    },
    {
      "type": "text",
      "id": "link_label",
      "label": "Link label",
      "default": "Discover Your Favorite â†’"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "About the Artist"
    }
  ]
}
{% endschema %} 