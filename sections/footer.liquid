{% comment %}
  Custom Footer Section
  File: sections/footer.liquid
{% endcomment %}

<footer class="site-footer">

  <!-- Main Footer Content - Four Columns -->
  <div class="footer-main-content">
    <div class="footer-col footer-col-info">
      {{ section.settings.info_text }}
    </div>

    <div class="footer-col footer-col-nav">
      {% if linklists[section.settings.shop_nav_menu].links.size > 0 %}
        <ul class="footer-nav-list">
          {% for link in linklists[section.settings.shop_nav_menu].links %}
            <li><a href="{{ link.url }}" class="footer-nav-link">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>

    <div class="footer-col footer-col-categories">
      {% if linklists[section.settings.category_nav_menu].links.size > 0 %}
        <ul class="footer-nav-list">
          {% for link in linklists[section.settings.category_nav_menu].links %}
            <li><a href="{{ link.url }}" class="footer-nav-link">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>

    <div class="footer-col footer-col-social">
      {% if linklists[section.settings.social_nav_menu].links.size > 0 %}
        <ul class="footer-nav-list">
          {% for link in linklists[section.settings.social_nav_menu].links %}
            <li><a href="{{ link.url }}" class="footer-nav-link">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>
  </div>

  <!-- Bottom Copyright Bar -->
  <div class="footer-bottom-bar">
    <p class="footer-copyright-small">Â© 2025 MK ART</p>
    <div class="footer-payment-icons">
      {% for type in shop.enabled_payment_types %}
        {{ type | payment_type_svg_tag }}
      {% endfor %}
    </div>
  </div>

</footer>

<style>
/* Base Footer Styles */
.site-footer {
  font-family: var(--font-primary--family, martianmono, sans-serif);
  color: var(--color-foreground);
  background-color: var(--color-background, #E6BDBE);
  box-sizing: border-box;
}

/* Main Footer Content - Four Columns */
.footer-main-content {
  display: flex;
  justify-content: space-between;
  padding: 4rem 2rem;
  gap: 2rem;
}

.footer-col {
  flex: 1 1 0;
  min-width: 0;
}

.footer-col-info p {
  font-size: 1rem;
  line-height: 1.5;
  margin-bottom: 0;
}

.footer-nav-list {
  list-style: none;
  margin: 0;
  padding: 0;
}

.footer-nav-list li {
  margin-bottom: 0.5rem;
}

.footer-nav-link {
  color: var(--color-foreground, #000000);
  text-decoration: none;
  font-size: 1rem;
  transition: opacity 0.2s;
  }

.footer-nav-link:hover {
  opacity: 0.7;
}

/* Bottom Copyright Bar */
.footer-bottom-bar {
  border-top: 1px solid #ccc;
  padding: 1.5rem 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 0.9rem;
  color: var(--color-foreground, #000000);
}

.footer-copyright-small {
  margin: 0;
}

.footer-payment-icons {
  display: flex;
  gap: 0.5rem;
  align-items: center;
}

.footer-payment-icons svg {
  height: 20px; /* Adjust size as needed */
  width: auto;
  fill: #888; /* Default icon color */
}

/* Responsive adjustments */
@media (max-width: 900px) {
  .footer-main-content {
    flex-direction: column;
    padding: 3rem 1.5rem;
  }
  .footer-col {
    margin-bottom: 1.5rem;
  }
  .footer-col:last-child {
    margin-bottom: 0;
  }
  .footer-col-info {
    text-align: center;
  }
  .footer-col-nav, .footer-col-categories, .footer-col-social {
    text-align: center;
  }
  .footer-nav-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem 1rem;
  }

  .footer-bottom-bar {
    flex-direction: column;
    gap: 0.5rem;
    padding: 1rem 1.5rem;
  }
}

@media (max-width: 600px) {
  .footer-main-content {
    padding: 2rem 1rem;
  }
  .footer-col-info p, .footer-nav-link {
    font-size: 0.9rem;
  }
}
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "richtext",
      "id": "info_text",
      "label": "Info Text",
      "default": "<p>Please note: Original paintings take 1-3 weeks to dry and are worth the wait! For more shipping details, take a peek at my FAQs.</p>"
    },
    {
      "type": "link_list",
      "id": "shop_nav_menu",
      "label": "Shop Navigation Menu",
      "default": "footer"
    },
    {
      "type": "link_list",
      "id": "category_nav_menu",
      "label": "Category Navigation Menu",
      "info": "e.g., Abstract, Asian Art, etc.",
      "default": "footer"
    },
    {
      "type": "link_list",
      "id": "social_nav_menu",
      "label": "Social Media Menu",
      "default": "footer"
    }
  ],
  "presets": [
    {
      "name": "MK ART Style Footer"
    }
  ]
}
{% endschema %}